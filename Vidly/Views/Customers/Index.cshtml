@model System.Collections.Generic.List<Vidly.Models.Customer>

@{
    ViewBag.Title = "Customers";
    Layout = "_Layout";
}

<h2>Customers</h2>

@if (Model.Count == 0)
{
    <p>No Customers found.</p>
}
else
{
    <table class="table">
        <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Customers" 
                       asp-action="Details" 
                       asp-route-id="@customer.Id">
                        @customer.Name
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
