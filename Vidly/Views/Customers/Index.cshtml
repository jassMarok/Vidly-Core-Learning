@model System.Collections.Generic.List<Vidly.Models.Customer>

@{
    ViewBag.Title = "Customers";
    Layout = "_Layout";
}

<h2>Customers</h2>

@if (Model.Count == 0)
{
    <p>No Customers found.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <td>Customer</td>
                <td>Discount Rate</td>
                <td>Is Subscribed To Newsletter</td>
            </tr>
        </thead>
        <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Customers"
                       asp-action="Details"
                       asp-route-id="@customer.Id">
                        @customer.Name
                    </a>
                </td>
                <td>
                    @customer.MembershipType.DiscountRate %
                </td>
                <td>
                    @(customer.IsSubscribedToNewsletter ? "Yes" : "No")
                </td>
            </tr>
        }
        </tbody>
    </table>
}
