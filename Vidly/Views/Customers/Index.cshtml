@model System.Collections.Generic.List<Vidly.Models.Customer>

@{
    ViewBag.Title = "Customers";
    Layout = "_Layout";
}

<h2>Customers</h2>

@Html.ActionLink("Add Customer", "New", "Customers", null, new { @class = "btn btn-primary mb-3" })

@if (Model.Count == 0)
{
    <p>No Customers found.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <td>Customer</td>
                <td>Membership Type</td>
                <td>Is Subscribed To Newsletter</td>
            </tr>
        </thead>
        <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(@customer.Name, 
                        "Edit", 
                        "Customers", 
                        new {id = @customer.Id})
                </td>
                <td>
                    @customer.MembershipType.Name
                </td>
                <td>
                    @(customer.IsSubscribedToNewsletter ? "Yes" : "No")
                </td>
            </tr>
        }
        </tbody>
    </table>
}
