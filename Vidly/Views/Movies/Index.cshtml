@using Microsoft.Extensions.Logging.EventLog
@model List<Movie>

@{
    ViewBag.Title = "Movies";
}

<h2>Movies</h2>

@Html.ActionLink("Add Movie", 
    "New", 
    "Movies", 
    null,
    new {@class = "btn btn-primary mb-3"})

@if (Model.Count == 0)
{
    <p>No Movies found.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <td>Movie</td>
                <td>Genre</td>
            </tr>
        </thead>
        <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(movie.Name, "Edit", "Movies", new {id = movie.Id})
                </td>
                <td>
                    @movie.Genre.Name
                </td>
            </tr>
        }
        </tbody>
    </table>
}
