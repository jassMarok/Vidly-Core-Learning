@using Microsoft.Extensions.Logging.EventLog
@model List<Movie>

@{
    ViewBag.Title = "Movies";
}

    <h2>Movies</h2>

@if (Model.Count == 0)
{
    <p>No Movies found.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <td>Movie</td>
                <td>Genre</td>
            </tr>
        </thead>
        <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Movies"
                       asp-action="Details"
                       asp-route-id="@movie.Id">
                        @movie.Name
                    </a>
                </td>
                <td>
                    @movie.Genre.Name
                </td>
            </tr>
        }
        </tbody>
    </table>
}
