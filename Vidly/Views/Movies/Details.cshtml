@model Movie

@{
    ViewBag.Title = Model.Name;
    Layout = "_Layout";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Release Date: @Model.ReleaseDate.ToString("Y")</li>
    <li>Date Added : @Model.ReleaseDate.ToString("Y")</li>
    <li>Number in stock : @Model.NumberInStock</li>
</ul>
